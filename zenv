## setup zsh environment stuff
test -n "$VERBOSE" && echo $0... 1>&2

typeset -gU path
typeset -gU fpath
typeset -gU manpath
typeset -gTU PERL5LIB perl5lib
typeset -gTU LD_LIBRARY_PATH ld_library_path
export ZLS_COLORS="$LS_COLORS"

# read personal zsh autoload functions...
fpath=(~/lib/zsh $fpath)
