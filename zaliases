## zsh specific aliases
test -n "$VERBOSE" && echo $0... 1>&2

alias ve=vared

alias -g :e="2>&1"
alias -g :l="| less"
alias -g :x="| less -x"
alias -g :g="| grep"
alias -g :v="| grep -v"
alias -g :s="| sort"
alias -g :h="| head"
alias -g :t="| tail"
alias -g :c="| wc -l"

alias -g :R="| R --vanilla --quiet"
