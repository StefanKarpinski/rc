## setup environment variables here
test -n "$VERBOSE" && echo $0... 1>&2

export HOST=`hostname`
export USER="${USER:-${USERNAME:-$LOGNAME}}"
export EMAIL="${USER}@${HOST}"

export HISTFILE=$HOME/.history
export HISTSIZE=100000
export SAVEHIST=100000

export PAGER=less
export LESS="-grXFz-7 -x4"
export ACK_PAGER=$PAGER
export EDITOR=nano
export VISUAL=$EDITOR
export FTP_PASSIVE=1
export RSYNC_RSH=ssh
export CVS_RSH=ssh
export JL_ANSWER_COLOR=magenta

export GITHUB_USER=StefanKarpinski
if [ -f "$HOME/.github.token" ]; then
	export GITHUB_TOKEN=$(cat "$HOME/.github.token")
fi

# system-specific variables...
export PATH="$HOME/bin:$HOME/usr/bin:/usr/local/git/libexec/git-core:/usr/local/bin:/usr/local/sbin:/opt/local/bin:/opt/local/sbin:/usr/X11R6/bin:/usr/bin:/usr/sbin:/bin:/sbin"
export MANPATH="/usr/local/share/man:/usr/local/man:/opt/local/share/man:/opt/local/man:/usr/X11R6/man:/usr/share/man"
export PERL5LIB=".:lib:$HOME/lib/perl"
export RUBYOPT=rubygems
case `uname` in
    Darwin) # OSX-specific...
    	export FLEX_HOME="$HOME/Library/flex_sdk_3"
        export PATH="/opt/ec2/bin:$HOME/bin:$FLEX_HOME/bin:/opt/local/lib/postgresql84/bin:/usr/local/libexec/git-core:/usr/local/ssl/bin:/usr/local/apache2/bin:/usr/local/bin:/usr/local/sbin:/opt/local/bin:/opt/local/sbin:/sw/bin:/sw/sbin:/usr/X11R6/bin:/usr/bin:/usr/sbin:/bin:/sbin:."
        export MANPATH="/usr/local/share/man:/usr/local/man:/opt/local/share/man:/opt/local/man:/sw/share/man:/usr/X11R6/man:/usr/share/man"
        export LD_LIBRARY_PATH="/usr/local/ssl/lib"
        export R_LIBS="$HOME/Library/R/2.6/library"
        export DISPLAY="${DISPLAY:-:0.0}"
        export JAVA_HOME=/Library/Java/Home
        export COPYFILE_DISABLE=true
        ;;
    *)
esac
